<!DOCTYPE html>
<html>
<head>
  <title>Find Smallest Number in an Array</title>
</head>
<body>
  <h2>Task 9: Find Smallest Number in an Array</h2>
  <p>Enter numbers separated by commas (e.g., 34,7,23,32,5,62):</p>

  <input type="text" id="arrayInput" placeholder="Enter numbers">
  <button onclick="findSmallest()">Find Smallest</button>

  <p id="result"></p>

  <script>
    function findSmallest() {
      let input = document.getElementById("arrayInput").value;

      if (input === "") {
        document.getElementById("result").innerText = "Please enter some numbers.";
        return;
      }

      // Convert input string to array of numbers
      let arr = input.split(",").map(Number);

      if (arr.some(isNaN)) {
        document.getElementById("result").innerText = "Please enter valid numbers separated by commas.";
        return;
      }

      // Find smallest number
      let min = Math.min(...arr);
      document.getElementById("result").innerText = "Smallest number: " + min;
    }
  </script>
</body>
</html>
