<!DOCTYPE html>
<html>
<head>
  <title>Factorial of a Number</title>
</head>
<body>
  <h2>Task 5: Factorial of a Number</h2>
  <p>Enter a number to find its factorial:</p>

  <input type="number" id="numInput" placeholder="Enter a number">
  <button onclick="findFactorial()">Find Factorial</button>

  <p id="result"></p>

  <script>
    function findFactorial() {
      let num = parseInt(document.getElementById("numInput").value);

      if (isNaN(num) || num < 0) {
        document.getElementById("result").innerText = "Please enter a valid non-negative number.";
        return;
      }

      let factorial = 1;
      for (let i = 1; i <= num; i++) {
        factorial *= i;
      }

      document.getElementById("result").innerText = 
        "Factorial of " + num + " is " + factorial;
    }
  </script>
</body>
</html>
